using System.Xml;

namespace StLib.XmlUtils
{
    ///<summary>
    ///Used to merge xml files 
    ///</summary>
    public static class XmlMerger
    {
        public static void MergeXml(string pathToFirst, string pathToSecond, string fullOutName)
        {
            XmlDocument list1 = new XmlDocument();
            XmlDocument list2 = new XmlDocument();
            list1.Load(pathToFirst);
            list2.Load(pathToSecond);
            foreach (XmlNode childOfSecond in list2.DocumentElement.ChildNodes)
            {
                XmlNode childOfFirst = list1.ImportNode(childOfSecond, true);
                list1.DocumentElement.AppendChild(childOfFirst);
            }
            list1.Save(fullOutName);
        }
    }
}
